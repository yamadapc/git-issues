name:                git-issues
version:             0.1.0.0
synopsis:            A way to track issues within a git repository.
homepage:            https://github.com/yamadapc/git-issues
license:             MIT
license-file:        LICENSE
author:              Pedro Tacla Yamada
maintainer:          tacla.yamada@gmail.com
copyright:           Copyright (c) 2015 Pedro Tacla Yamada
category:            Development
build-type:          Simple
cabal-version:       >=1.10

executable git-issues
  main-is:             Main.hs
  build-depends:       Spock
                     , aeson
                     , aeson-pretty
                     , base >=4.8 && <4.9
                     , bytestring
                     , clay
                     , containers >= 0.5.6.2
                     , directory
                     , filepath
                     , foreign-store
                     , github
                     , gitlib
                     , lucid
                     , network-uri
                     , open-browser >= 0.2.1
                     , optparse-applicative
                     , process
                     , raw-strings-qq
                     , read-editor >= 0.1.0.2
                     , text >= 1.2.1.3
                     , time
                     , transformers
                     , wai >= 3.0.4.0
                     , warp >= 3.1.3.1
  hs-source-dirs:      src
  default-language:    Haskell2010
